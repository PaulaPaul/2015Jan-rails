<p id="notice"><%= notice %></p>

<h1>Listing Artists</h1>

<table class="table-striped, table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th colspan=3></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.genre.name %></td>
        <td><%= link_to 'Show', artist, :class => "btn-link" %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist), :class => "btn-link" %></td>
        <td><%= link_to 'Destroy', artist, :class => "btn-link", method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path,:class => "btn-primary"  %>
